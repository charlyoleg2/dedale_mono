{
	"name": "dedale_mono",
	"version": "0.1.1",
	"description": "The mono-repo for an experimental hono-svelte-app",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/dedale_mono.git"
	},
	"homepage": "https://charlyoleg2.github.io/dedale_mono/",
	"author": "charlyoleg2",
	"license": "ISC",
	"keywords": [
		"crud",
		"micro-services",
		"backend",
		"rpc",
		"svelte",
		"hono",
		"zod"
	],
	"type": "module",
	"workspaces": [
		"pkg/*"
	],
	"scripts": {
		"nW:dev": "npm -w nW run dev",
		"nW:ci": "npm -w nW run ci",
		"nW:run": "npm -w nW run run_n",
		"nW:clean": "npm -w nW run clean",
		"nW:version": "npm -w nW version patch",
		"nA:dev": "npm -w nA run dev",
		"nA:ci": "npm -w nA run ci",
		"nA:run": "npm -w nA run run_n",
		"nA:clean": "npm -w nA run clean",
		"nA:version": "npm -w nA version patch",
		"dedalui:dev": "npm -w dedalui run dev",
		"dedalui:ci": "npm -w dedalui run ci",
		"dedalui:clean": "npm -w dedalui run clean",
		"dedalui:preview": "npm -w dedalui run preview",
		"dedalui:version": "npm -w dedalui version patch",
		"dedalep:dev": "npm -w dedalep run dev",
		"dedalep:ci": "npm -w dedalep run ci",
		"dedalep:clean": "npm -w dedalep run clean",
		"dedalep:preview": "npm -w dedalep run preview",
		"dedalep:version": "npm -w dedalep version patch",
		"dev": "run-p nW:dev nA:dev dedalep:dev",
		"ci-hono": "run-s nW:ci nA:ci",
		"ci-svelte": "run-s dedalui:ci dedalep:ci",
		"ci": "run-s ci-hono ci-svelte apidoc",
		"clean-root": "rimraf tmp output output2 build",
		"clean-hono": "run-s nA:clean nW:clean",
		"clean-svelte": "run-s dedalui:clean dedalep:clean",
		"clean": "run-s clean-root clean-hono clean-svelte",
		"run_n": "run-p nA:run nW:run",
		"test_nA": "scr/test_nA.sh",
		"preview": "run-p run_n dedalui:preview",
		"versions": "run-s nA:version nW:version dedalui:version dedalep:version",
		"gen_apidoc": "typedoc",
		"cp_apidoc": "fse copy build/apidoc pkg/dedalep/build/docs/apidoc",
		"apidoc": "run-s gen_apidoc cp_apidoc",
		"serve_apidoc": "serve build/apidoc",
		"serve_dedalep": "serve pkg/dedalep/build",
		"ls-workspaces": "npm -ws exec -c pwd",
		"ls-pkg": "ls -la pkg"
	},
	"devDependencies": {
		"@atao60/fse-cli": "^0.1.9",
		"npm-run-all2": "^7.0.1",
		"rimraf": "^6.0.1",
		"serve": "^14.2.4",
		"typedoc": "^0.27.2"
	}
}
