---
import Layout from "../layouts/Layout.astro";
import { backCfg } from "back-config";

const base = import.meta.env.BASE_URL;
---

<Layout title="Welcome to Dedalas">
	<h1>Welcome to Dedalas</h1>
	<p>The static pages of Dedale</p>

	<h2>Documentation</h2>
	<ol>
		<li><a href=`${base}/docs/scalability`>Software scalability</a></li>
		<li><a href=`${base}/docs/apidoc/` rel="external">TypeDoc</a></li>
	</ol>

	<h2>Swagger UI</h2>
	<ol>
		<li>
			<a
				href={`${backCfg.nA_host}:${backCfg.nA_port}/swagger`}
				rel="external">swagger-ui of nA</a
			>
		</li>
		<li>
			<a
				href={`${backCfg.nZ_host}:${backCfg.nZ_port}/swagger`}
				rel="external">swagger-ui of nZ</a
			>
		</li>
	</ol>

	<h2>SSG pages</h2>
	<ol>
		<li><a href=`${base}/ssg/pageSearchAll`>searchAll</a></li>
		<li><a href=`${base}/ssg/pageSearchAll`>searchAll2</a></li>
	</ol>
</Layout>
