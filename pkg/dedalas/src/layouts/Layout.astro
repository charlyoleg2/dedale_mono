---
interface Props {
	title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
const base2 = base === "/" ? "" : base;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${base2}/favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<a href={base}>Dedales index</a>
		<section>
			<slot />
		</section>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Courier New", "Helvetica", "Arial", "Verdana";
		background-color: LightCyan;
		color: Indigo;
	}
</style>
