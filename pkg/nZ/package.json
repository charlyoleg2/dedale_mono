{
	"name": "nZ",
	"version": "0.1.2",
	"description": "The micro-service for writing persistent DB file",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/dedale_mono.git"
	},
	"homepage": "https://charlyoleg2.github.io/dedale_mono/",
	"author": "charlyoleg",
	"license": "ISC",
	"keywords": [
		"micro-service",
		"hono",
		"zod"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./build/index.d.ts",
			"default": "./build/index.js"
		}
	},
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"ci": "run-s build pretty lint test:unit:once",
		"run_n": "node build/index.js",
		"clean": "rimraf build node_modules"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.7",
		"@hono/swagger-ui": "^0.5.3",
		"@hono/zod-openapi": "^1.2.0",
		"@hono/zod-validator": "^0.7.6",
		"es-main": "^1.4.0",
		"hono": "^4.11.3",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@types/node": "^25.0.3",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.7.4",
		"rimraf": "^6.1.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.1",
		"vitest": "^4.0.16"
	}
}
